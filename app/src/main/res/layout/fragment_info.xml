<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/ubuntu"
            android:text="Who is the best to assist me ?"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView

            android:id="@+id/firstBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="60dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">


            <LinearLayout
                android:id="@+id/first_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecemasan"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="In the case of an accident, fire, robbery, or theft, dial 999 immediately. Quick action will save everyone."
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/secondBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/firstBar">

            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tenaga Nasional Berhad TNB"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/second_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="If there is an electrical outage or damage to lighting systems, all users must report it immediately so that appropriate action can be taken. Just dial or SMS 15454 from anywhere in Peninsula Malaysia with mobile coverage at the cost of a local call for voice calls and toll-free for SMS. It’s easy and effective. "
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/thirdBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondBar">

            <LinearLayout
                android:id="@+id/third_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telekom Malaysia TM"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/third_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="o Local lines\nLocal user that want to report TM (Telekom Malaysia) about phone or internet damage.\n\no International lines \nIf you require Domestic and International Assistance Services.
"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/fourthBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thirdBar">

            <LinearLayout
                android:id="@+id/fourth_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helpline Wanita"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fourth_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="o 1 Stop Crisis Centre\nIf you have been the victim of physical, sexual, or emotional abuse, please contact and make a complaint at the number provided. Your complaint will be taken seriously by a medical officer to help with your crisis and problem.\n\no All Women Action Society Malaysia (AWAM)\nAWAM provides training to raise awareness about issues relating to violence against women, advocacy for improved legislation and policies for women, and counseling services and legal information for women facing discrimination or violence.\n\no Befrienders\nIt offer emotional support services if you are experiencing loneliness, difficulty, despair, depression, or suicidal thoughts. Available 24 hours a day, seven days a week. Every volunteer has been trained, and every conversation is kept private and confidential. You can, however, keep your identity, such as your name, and use a nickname\n\no Buddies of Ipoh\nThis society was established to assign a 'buddy' to support a poor family living with HIV/AIDS. This naturally include the children as well. We provide an Education Sponsorship for Children program.\n\no HAWA\nThe society was established to protect and care for the welfare of orphans, the elderly, and families with disabilities. Have questions? Get answers from YAYASAN KEBAJIKAN ANAK-ANAK YATIM DAN ORANG-ORANG TUA KINTA (HAWA)\n\no Women Aid Organization (WAO)\nIf you’re having a particular problem, don’t worry because you’re not alone. Your consultation will be advised and scheduled by the Women Aid Organization (WAO). You can also contact WAO for protection and crisis assistance.

 "
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/fifthBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fourthBar"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/fifth_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aduan Awam"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fifth_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="o Biro Pengaduan\nIf you have any complaints about government employees, shortages and delays in public services and utilities, or public laws and policies\n\no Persatuan Pengguna Islam Malaysia (PPIM)\nAny related to halal / haram, persecution, injustice, wickedness and cruelty against Muslim consumers.\n\no Gabungan Persatuan Pengguna Malaysia (FOMCA)\nFOMCA is a coalition of state consumer associations that works to protect Malaysian consumers' rights. Have questions? Get answers from Gabungan Persatuan Pengguna Malaysia\n\no MCA Hotline\nIf you have any complaints related to Malaysian Chinese Association "
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>